<!DOCTYPE HTML>
<html>
<head>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
	<style>
	body {margin: 5%; margin-right: 20%; font-family: sans-serif;}
	.definition {display:none;}
	</style>
</head>
<body>
	<h1>Flash Card App: Hard Study Mode</h1>
	<a href="/">Back to Home</a>
	<p id="word">Word: <%= @flashcard.word %></p>
	<p id="difficulty">Difficulty: <%= @flashcard.difficulty %></p>
	<button id="show-def">Show Definiton</button>
	<button id="next">Next Word</button>
	<div class="definition">
		<p id="def">Definition: <%= @flashcard.definition %></p>
	</div>
	<script>
		$("#show-def").click(function() {
			$(".definition").toggle();
		})
		var i=0;
		$("#next").click(function(e){
			e.preventDefault();
			i++;
			$.get("/nextdifficult", function(result) {
				if (i<result.length) {
					$("#word").html("Word: " + result[i].word);
					$("#difficulty").html("Difficulty: " + result[i].difficulty);
					$("#def").html("Definition: " + result[i].definition);
					if ($(".definition").css('display') !== 'none') {
						$(".definition").toggle();
					}
				}
				else {
					alert("Good job! You went through all the flashcards.")
				}
			})
		})
	</script>
</body>
</html>